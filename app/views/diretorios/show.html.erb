<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Document</title>
  <style>
      body{
          background: #1a0c50;
      }

      .list-group{
          padding-left: 30px;
          padding-right: 30px;
          width: 700px !important;
          max-height: 500px;
          min-height: 500px;
          overflow-y: auto;
      }

      .container-list {
          margin-top: 70px;
          border: 1px solid #6a95ea;
          border-radius: 20px;
          padding-bottom: 20px;
          padding-top: 10px;
      }

      .ml-2 {
          padding-left: 10px;
          color: #d2deff;
      }


      .list-group-item{
          margin-top:10px;
          border-radius: 10px;
          background: #5E35B1;
          cursor: pointer;
          transition: all 0.01s ease-in-out;
      }

      .list-group-item:hover{
          transform: scaleX(1.02);
      }

      .list-group-item:hover .check {
          opacity: 1;
      }

      .about span{
          font-size: 12px;
          margin-right: 10px;
      }

      input[type=checkbox] {
          position: relative;
          cursor: pointer;
      }

      input[type=checkbox]:before {
          content: "";
          display: block;
          position: absolute;
          width: 20px;
          height: 20px;
          top: 0px;
          left: 0;
          border: 1px solid #10a3f9;
          border-radius: 3px;
          background-color: white;
      }

      input[type=checkbox]:checked:after {
          content: "";
          display: block;
          width: 7px;
          height: 12px;
          border: solid #007bff;
          border-width: 0 2px 2px 0;
          -webkit-transform: rotate(45deg);
          -ms-transform: rotate(45deg);
          transform: rotate(45deg);
          position: absolute;
          top: 2px;
          left: 6px;
      }

      /* Full-width input fields */
      .form-container input[type=text], .form-container input[type=password] {
          width: 100%;
          padding: 15px;
          margin: 5px 0 22px 0;
          border: none;
          background: #f1f1f1;
      }

      /* When the inputs get focus, do something */
      .form-container input[type=text]:focus, .form-container input[type=password]:focus {
          background-color: #ddd;
          outline: none;
      }

      /* Set a style for the submit/login button */
      .form-container .open-button {
          background-color: #04AA6D;
          color: white;
          padding: 16px 20px;
          border: none;
          cursor: pointer;
          width: 100%;
          margin-bottom:10px;
          opacity: 0.8;
      }

      .open-button {
          border: 2px solid #6a95ea;
          background-color: rgba(7, 8, 35, 0.7);
          border-radius: 10px;
          margin-top: 20px;
          margin-right: 20px;
          color: white;
          padding: 16px 20px;
          cursor: pointer;
          opacity: 0.8;
          width: 280px;
          font-size: 20px;
      }

      .side_buttons {
          height: 100px;
          width: 100px;
          margin: 20px;
          border: 2px solid #6a95ea;
          background-color: rgba(7, 8, 35, 0.7);
          border-radius: 30px;
          color: white;
      }

      .containers_button_on_the_side {
          width: 150px;
          vertical-align: middle;
          display: flex;
          align-items: center;
          justify-content: center;
      }

      /* Add a red background color to the cancel button */
      .form-container .cancel {
          background-color: red;
      }

      /* Add some hover effects to buttons */
      .form-container .open-button:hover, .side_buttons:hover {
          opacity: 1;
      }

      .open-button:hover, .side_buttons:hover {
          opacity: 1;
          background-color: black;
      }

      input[type="checkbox"]:checked + .check { opacity: 1; }
  </style>
</head>
<body>
<div class="container d-flex justify-content-center">
  <p style="color: white">
    <strong><%= @diretorio.name %></strong>
  </p>
</div>
<div class="container d-flex justify-content-center" style="color: white">
  <strong>Caminho: </strong>
  <%= @diretorio.path %>
</div>
<div class="container d-flex justify-content-center" style="color: white">
  <strong>Data Criação: </strong>
  <%= @diretorio.created_at.strftime("%d/%m/%y") %>
</div>

<div class="contain er d-flex justify-content-center">

  <div class="containers_button_on_the_side">
    <% if Diretorio.new.get_root_directory_id != @diretorio.id %>
      <%= link_to diretorio_url(@diretorio_mapa.get_parent_directory(@diretorio.id).id) do %>
          <button class="side_buttons" id="back_button">Back</button>
      <% end %>
    <% else %>

    <% end %>
  </div>


<!--  Diretorio.find(DiretoriosMapa.where(child: @diretorio.id)[:parent])-->

  <div class="container-list">
    <ul class="list-group mt-3 mb-3 text-white">

      <% DiretoriosMapa.where(parent: @diretorio.id).each do |diretorios_in_selected_diretorio| %>
        <%= render Diretorio.where(id: diretorios_in_selected_diretorio.child) %>
      <% end %>

    </ul>
  </div>

  <div class="containers_button_on_the_side">
<!--    <button class="side_buttons", id="next_button">....</button>-->
  </div>

</div>

<div class="container-buttons d-flex justify-content-center">

  <%= link_to edit_diretorio_path(@diretorio) do %>
    <button class="open-button">Editar</button>
  <% end %>

  <%= link_to new_diretorio_path(:diretorio_parent_id => @diretorio.id) do %>
    <button class="open-button">Criar</button>
  <% end %>
</div>

<script type="text/javascript" charset="utf-8">
</script>
</body>
</html>