<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Document</title>
  <style>
      body{
          background: #1a0c50;
      }
      .button {
          border: 2px solid #6a95ea;
          background-color: rgba(7, 8, 35, 0.7);
          border-radius: 10px;
          margin-top: 20px;
          margin-right: 20px;
          color: white;
          padding: 16px 20px;
          cursor: pointer;
          opacity: 0.8;
          width: 140px;
          font-size: 12px;
          text-decoration: none;
      }
  </style>
</head>
<body class="text-white">
  <%= form_with(model: subject) do |form| %>
    <% if subject.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(subject.errors.count, "erro(s)") %> impedem que a matéria seja salva:</h2>

        <ul>
          <% subject.errors.each do |error| %>
            <li><%= error.message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= form.label :name, "Nome",style: "display: block" %>
      <%= form.text_field :name %>
    </div>
  <br/>
    <div>
      <%= form.label :teacher, "Professor", style: "display: block" %>
      <%= form.text_field :teacher %>
    </div>
    <br/>
    <div>
      <%= form.label :campi, "Campi", style: "display: block" %>
      <%= form.text_field :campi %>
    </div>
    <br/><br/>
    <div>
      <%= form.submit 'Salvar Matéria', class: "button" %>
    </div>
  <% end %>
</body>

